{
  "name": "gethyas",
  "version": "2.0.6",
  "description": "Hyas",
  "engines": {
    "node": ">=16.17.0",
    "npm": ">=8.15.0"
  },
  "browserslist": [
    "defaults"
  ],
  "scripts": {
    "dev": "exec-bin node_modules/.bin/hugo/hugo server --bind=0.0.0.0 --disableFastRender --baseURL=http://localhost --noHTTPCache",
    "dev:gitpod": "exec-bin node_modules/.bin/hugo/hugo server --disableFastRender --baseUrl $(gp url 1313) --liveReloadPort=443 --appendPort=false --bind=0.0.0.0",
    "create": "exec-bin node_modules/.bin/hugo/hugo new",
    "check": "npm run check:scripts && npm run check:styles && npm run check:markdown",
    "check:scripts": "eslint config",
    "check:styles": "stylelint \"assets/scss/**/*.{css,sass,scss}\"",
    "check:markdown": "markdownlint-cli2 \"*.md\" \"content/**/*.md\"",
    "fix:markdown": "markdownlint-cli2-fix \"*.md\" \"content/**/*.md\"",
    "test": "npm run check",
    "build": "exec-bin node_modules/.bin/hugo/hugo --minify",
    "preview": "http-server --gzip --brotli --ext=html --cors",
    "clean": "npm run clean:build && npm run clean:install",
    "clean:build": "shx rm -rf public resources .hugo_build.lock",
    "clean:install": "shx rm -rf package-lock.json yarn.lock pnpm-lock.yaml node_modules",
    "preinfo": "npm version",
    "info": "npm list",
    "postinfo": "exec-bin node_modules/.bin/hugo/hugo version",
    "postinstall": "hugo-installer --version otherDependencies.hugo --extended --destination node_modules/.bin/hugo",
    "version": "auto-changelog -p && git add CHANGELOG.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gethyas/hyas"
  },
  "keywords": [
    "hyas",
    "hugo"
  ],
  "author": "Henk Verlinde",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gethyas/hyas/issues"
  },
  "homepage": "https://github.com/gethyas/hyas#readme",
  "dependencies": {
    "@babel/cli": "^7.22.5",
    "@babel/core": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "@hyas/core": "^1.0.0",
    "auto-changelog": "^2.4.0",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.42.0",
    "exec-bin": "^1.0.0",
    "http-server": "^14.1.1",
    "hugo-installer": "^4.0.1",
    "lazysizes": "^5.3.2",
    "markdownlint-cli2": "^0.8.1",
    "modern-css-reset": "^1.4.0",
    "netlify-plugin-submit-sitemap": "^0.4.0",
    "postcss": "^8.4.24",
    "postcss-cli": "^10.1.0",
    "purgecss-whitelister": "^2.4.0",
    "quicklink": "^2.3.0",
    "shx": "^0.3.4",
    "stylelint": "^15.7.0",
    "stylelint-config-standard-scss": "^9.0.0"
  },
  "otherDependencies": {
    "hugo": "0.113.0"
  },
  "packageManager": "pnpm@8.3.1"
}
